<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    android:orientation="vertical"
    tools:context=".TampilSemuaData">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorPrimaryDark2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backlink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_navigate_white"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="16dp">



                <TextView
                    android:id="@+id/titlepage"
                    android:layout_marginTop="25dp"
                    android:textSize="22sp"
                    android:textColor="#FFF"
                    android:fontFamily="@font/monlight"
                    android:text="Aspirasi"


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/subtitlepage"
                    android:textSize="11sp"
                    android:textColor="@color/colorText"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/monlight"
                    android:text="berikan aspirasimuu untk BPJS"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimaryDark2"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimaryDark2"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimaryDark2"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_addaspirasi"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="Tambah Aspirasi"
            android:textSize="11sp"
            android:textColor="@color/colorPrimaryDark2"
            android:layout_marginLeft="40dp"
            android:fontFamily="@font/monmedium"
            android:background="@drawable/button_white"/>

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/listViewAspirasi" />
    <!--android:layout_marginLeft="16dp"-->
    <!--android:layout_marginRight="16dp"-->





</LinearLayout>