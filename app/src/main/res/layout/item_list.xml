<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
  android:layout_marginBottom="15dp"
    android:layout_height="100dp"
    android:background="@drawable/bgitemdoes">

           <LinearLayout
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="16dp">

            <TextView
                android:id="@+id/titledoes"
                android:layout_marginTop="19dp"
                android:textSize="22sp"
                android:textColor="#000C5D"
                android:text="Buy whiskas"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/descdoes"
                android:textSize="18sp"
                android:textColor="#ADADAD"
                android:layout_marginTop="8dp"
                android:text="Nearly market good to"
                android:layout_width="180dp"
                android:layout_height="30dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp">

            <TextView
                android:id="@+id/datedoes"
                android:textSize="18sp"
                android:textColor="#F63EA5"
                android:layout_marginTop="8dp"
                android:text="Tomorrow"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>